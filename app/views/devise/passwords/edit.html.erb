<h2>Change your password</h2>

<div class="col-md-6">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :reset_password_token, as: :hidden, class: "form-control" %>
    <%= f.full_error :reset_password_token %>
  </div>

  <div class="form-group">
    <%= f.input :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :password_confirmation, label: "Confirm your new password", required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit, "Change my password", class: "btn btn-success" %>
  </div>

<% end %>

<%= render "devise/shared/links" %>
</div>