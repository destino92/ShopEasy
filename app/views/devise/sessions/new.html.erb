<h2>Log in</h2>

<div class="col-md-6">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :password, required: true, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <%= f.input :remember_me, class: "form-control", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-group">
      <%= f.button :submit, "Log in", class: 'btn btn-success' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
