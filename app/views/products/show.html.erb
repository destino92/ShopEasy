<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @product.image(:medium) %>
		</div>
		<% if @product.categories.any? %>
			<% @product.categories.each do |productCategory| %>
				<%= link_to productCategory.name, category_path(productCategory), class: "btn btn-success" %>
			<% end %>
		<% end %>
		<p><%= @product.description %></p>
	</div>
	<div class="col-md-6">
		<h2><%= @product.title %></h2>
		<h4><%= @product.price %> fcfa</h4>
		<h4><%= @product.user.name %></h4>
		<p><%= link_to 'All user products', user_path(@product.user) %></p>
	</div>
</div>
		
<% if (user_signed_in?) && (current_user == @product.user) %>
	<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-success" %>
	<%= link_to 'Destroy', @product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-success" %>
<% end %>
	<%= link_to 'Back', products_path, class: "btn btn-success" %>
