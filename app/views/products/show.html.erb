<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-6">
		<div class="thumbnail">
			<%= image_tag @product.image(:medium) %>
		</div>
		<p><%= @product.description %></p>
	</div>
	<div class="col-md-6">
		<h2><%= @product.title %></h2>
		<h4><%= @product.price %> fcfa</h4>
		<h4><%= @product.user.name %></h4>
	</div>
</div>

<%= link_to 'Edit', edit_product_path(@product), class: "btn btn-link" %> |
<%= link_to 'Back', products_path, class: "btn btn-link" %>
